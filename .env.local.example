# ==============================================
# MINIMAL TRADING APP - LOCAL CONFIGURATION
# ==============================================
# Copy this file to .env for local development

# App Mode
APP_ENV=local
ENABLE_ADMIN=false
ENABLE_TRADING_BOT_UI=true
ENABLE_LIVE_MARKET=false
ENABLE_NEWS=false

# Supabase (Required)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_local_supabase_anon_key

# Optional: Market Data (only if ENABLE_LIVE_MARKET=true)
MARKET_PROVIDER=mock
FINNHUB_API_KEY=
COINSTATS_API_KEY=

# Optional: Enable features
ENABLE_REALTIME_WS=false
ENABLE_PUSH_NOTIFICATIONS=false
