# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# App Mode
APP_ENV=prod
ENABLE_ADMIN=false
ENABLE_TRADING_BOT_UI=true
ENABLE_LIVE_MARKET=true
ENABLE_NEWS=true

# Supabase Production Configuration
# SECURITY WARNING: Only anon key should be in production builds
# Service role keys grant full database access and must NEVER be in client apps
# Use Row Level Security (RLS) policies for access control instead
EXPO_PUBLIC_SUPABASE_URL=https://urkokrimzciotxhykics.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY_HERE

# Market Data (Using mock for safety)
MARKET_PROVIDER=mock

# Features
ENABLE_REALTIME_WS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Locale
EXPO_PUBLIC_LOCALE_DEFAULT=en
